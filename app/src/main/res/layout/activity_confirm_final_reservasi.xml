<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ConfirmFinalReservasiActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">


    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Silakan tulis Detail Pembayaran Anda"
        android:textSize="16sp"
        android:textColor="@color/brown1"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />
            </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <EditText
                    android:id="@+id/shippment_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/txt"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/input_design2"
                    android:hint="Your Name"
                    android:padding="10dp"
                    android:textColor="@color/brown1"
                    android:textColorHint="@color/brown3"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/shippment_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/shippment_name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/input_design2"
                    android:hint="Your Phone Number"

                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/brown1"
                    android:textColorHint="@color/brown3"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/shippment_address"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/shippment_phone_number"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/input_design2"
                    android:hint="Your Home Address"
                    android:padding="10dp"
                    android:textColor="@color/brown1"
                    android:textColorHint="@color/brown3"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/shippment_city"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/shippment_address"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/input_design2"
                    android:hint="Your City Name"
                    android:padding="10dp"
                    android:textColor="@color/brown1"
                    android:textColorHint="@color/brown3"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/no_rek"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/shippment_city"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/input_design2"
                    android:hint="No.Rekening"
                    android:padding="10dp"
                    android:textColor="@color/brown1"
                    android:textColorHint="@color/brown3"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/mail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/no_rek"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/input_design2"
                    android:hint="Email"
                    android:padding="10dp"
                    android:textColor="@color/brown1"
                    android:textColorHint="@color/brown3"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/catatan_user"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/mail"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/input_design2"
                    android:hint="Catatan"
                    android:padding="10dp"
                    android:textColor="@color/brown1"
                    android:textColorHint="@color/brown3"
                    android:textSize="14sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp">

            <TextView
                android:id="@+id/txtPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metode Pembayaran"
                android:textAlignment="center"
                android:textColor="@color/brown1"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativ0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPay"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <RadioButton
                android:id="@+id/rd_tf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRANSFER"
                android:textColor="@color/brown"
                android:textStyle="bold"/>


            <ImageView
                android:id="@+id/imgBukti"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_foto_foreground"
                android:padding="1dp"
                android:background="@drawable/input_design2"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativ9"
            android:layout_below="@+id/relativ0"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="25dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:textSize="8sp"
                android:textColor="@color/brown"
                android:text="Booking akan dibatalkan, apabila tidak melakukan pembayaran dalam 1x12 jam"
                />
            <TextView
                android:id="@+id/txtbni"
                android:layout_width="140dp"
                android:layout_height="20dp"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:textColor="@color/brown"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="BNI : 4324 43242 422"
                />

            <TextView
                android:layout_width="140dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtbni"
                android:layout_marginTop="10dp"
                android:text="BRI : 1234 5678 007"
                android:textColor="@color/brown"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

    <Button
        android:id="@+id/confirm_final_order_btn"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="Confirm"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttons"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:padding="1dp"
        />
        </RelativeLayout>

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>