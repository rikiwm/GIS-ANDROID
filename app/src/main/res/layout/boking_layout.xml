<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="15dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:padding="10dp"
        android:background="@drawable/input_design">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RIWAYAT TRANSAKSI"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:textColor="@color/brown"
                android:id="@+id/tvriwayat"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:textAlignment="center"/>

            <RelativeLayout
                android:id="@+id/rlb1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="2dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Nama Pemesan : "
                    android:textColor="@color/brown"
                    android:textStyle="bold"
                    android:id="@+id/tvnama"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tvnama"
                    android:text="No.Hp Pemesan : "
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:id="@+id/tvphonenumber"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_below="@+id/tvphonenumber"
                    android:layout_marginTop="10dp"
                    android:text="Total  : "
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:id="@+id/tvtotal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/tvtotal"
                    android:layout_marginTop="10dp"
                    android:text="Alamat  : "
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:id="@+id/tvalamat"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_below="@+id/tvalamat"
                    android:layout_marginTop="10dp"
                    android:text="Rekening  : "
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:id="@+id/tvrek"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_below="@+id/tvrek"
                    android:layout_marginTop="10dp"
                    android:text="Tgl / Jam : "
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:id="@+id/tvdate"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_below="@+id/tvdate"
                    android:layout_marginTop="10dp"
                    android:text="Note: "
                    android:textStyle="bold"
                    android:textColor="@color/brown"
                    android:id="@+id/tvcatat"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/order_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="User Name"
                    android:textColor="@color/brown"
                    android:textSize="14sp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/order_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_user_name"
                    android:layout_marginTop="10dp"
                    android:text="Phone Number"
                    android:gravity="end"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/brown" />

                <TextView
                    android:id="@+id/order_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_phone_number"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    android:text="Total Price"
                    android:textColor="@color/brown"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/order_address_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_total_price"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    android:text="Address,City"
                    android:textColor="@color/brown"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/order_rekening"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_address_city"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    android:text="Rekening"
                    android:textColor="@color/brown"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/order_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_rekening"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    android:text="Date Time"
                    android:textColor="@color/brown"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/order_cat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_date_time"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    android:text="Catatan"
                    android:textColor="@color/brown"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:id="@+id/rlimage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/order_cat"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input_design">

                    <ImageView
                        android:id="@+id/bukti_tf"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_centerHorizontal="true"
                        android:padding="2dp"
                        android:scaleType="fitCenter" />
                </RelativeLayout>
            </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <Button
            android:id="@+id/show_all"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttons"
            android:text="Show User Booking"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>